<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-- 커서 및 포커스 --"
         />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select All on Focus"
        android:selectAllOnFocus="true"
    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cursor Test-True"
        android:cursorVisible="true"
    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cursor Test-False"
        android:cursorVisible="false"
    />


        <!--  Auto Link -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto Link test. https://www.naver.com naver home page. aagja@bbb.com mail address"
            android:autoLink="web|email"
            />



<!--    Text Attribute-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shadow Text"
        android:textSize="40dp"
        android:textColor="#3F51B5"
        android:shadowColor="#33120601"
        android:shadowDx="3.0"
        android:shadowDy="3.0"
        android:shadowRadius="3.0"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wide Text"
        android:textSize="50dp"
        android:textScaleX="2.0"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Narrow Text"
        android:textSize="50dp"
        android:textScaleX="0.5"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="네이버 : "
            android:shadowColor="#473F3F"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="3.0"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="http://www.naver.com "
            android:shadowColor="#473F3F"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="3.0"
            android:textSize="20dp"
            android:autoLink="web"
            android:textColorLink="#000000"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="구글 : "
            android:shadowColor="#473F3F"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="3.0"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="http://www.google.com"
            android:shadowColor="#473F3F"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="3.0"
            android:textSize="20dp"
            android:autoLink="web"
            android:textColorLink="#000000"
            />

    </LinearLayout>

<!--    줄간격 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="동해물과 백두산이 마르고 닳도록 하느님이 보우하사 우리 나라만세 무궁화 삼천리 화려강산 대한사람 대한으로 길이 보전하세"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="동해물과 백두산이 마르고 닳도록 하느님이 보우하사 우리 나라만세 무궁화 삼천리 화려강산 대한사람 대한으로 길이 보전하세"
        android:lineSpacingMultiplier="1.3"
        android:background="#CFCCCC"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="동해물과 백두산이 마르고 닳도록 하느님이 보우하사 우리 나라만세 무궁화 삼천리 화려강산 대한사람 대한으로 길이 보전하세"
        android:lineSpacingMultiplier="1.3"
        android:lineSpacingExtra="40dp"
        android:background="#EFC1C1"
        />





</LinearLayout>